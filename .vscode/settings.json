{
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": "\\.mdX$",
                "isAsync": true,
                "cmd": "cd ${workspaceRoot} && git commit -a -m 'todo' && git push"
            },
            {
                "match": "\\.md$",
                "isAsync": true,
                "cmd": "cd ${fileDirname} && git pull && git commit -a -m 'todo' && git push"
            }
        ]
    }
    
}